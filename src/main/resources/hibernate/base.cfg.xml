<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<!--session-factory name="ecsc"-->
	<session-factory>
            <property name="connection.url">jdbc:mysql://localhost:3307/stuloan</property>
            <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
            <mapping class="com.stuloan.web.domain.Sysuser"/>
            <mapping class="com.stuloan.web.domain.Resource"/>
            <mapping class="com.stuloan.web.domain.Userresource"/>
    </session-factory>
</hibernate-configuration>
